# Application Environment
APP_ENV=local
APP_DEBUG=true

# Site URLs
SITE1_URL=http://site1.local
SITE2_URL=http://site2.local

# Database Configuration - MySQL
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_USER=root
MYSQL_DATABASE=statamic_main
SITE1_DB=statamic_site1

# Database Configuration - MariaDB
MARIADB_ROOT_PASSWORD=rootpassword
MARIADB_USER=root
MARIADB_DATABASE=statamic_secondary
SITE2_DB=statamic_site2

# Application Keys (generate with: php artisan key:generate)
APP_KEY_1=base64:your-app-key-1-here
APP_KEY_2=base64:your-app-key-2-here

# Redis Configuration
REDIS_PASSWORD=

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@site1.local
MAIL_FROM_NAME="${APP_NAME}"

# Statamic Configuration
STATAMIC_LICENSE_KEY=your-license-key-here
